<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="solupaper_purchase_order_form" model="ir.ui.view">
            <field name="name">solupaper.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_ref" position="after">
                    <field name="descuento" attrs="{'readonly': [('state', 'in', ('purchase','done','cancel'))]}"/>
                </field>
                <field name="user_id" position="after">
                    <field name="sale_order_id" attrs="{'readonly': [('state', 'in', ('purchase','done','cancel'))]}"/>
                </field>
            </field>
        </record>

</odoo>
