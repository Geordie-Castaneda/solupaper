<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="solupaper_draft_bl_report">
       <t t-call="web.html_container">

         <t t-set="data_report_margin_top" t-value="12"/>
         <t t-set="data_report_header_spacing" t-value="4"/>

         <t t-foreach="docs" t-as="o">
           <div class="article">
             <div class="page">

               <style>
                 div.contenedor_encabezado{
                   margin:auto;
                   margin-top:0px;
                   margin-bottom:5px;
                   width:100%;
                   min-height:300px;
                   max-height:600px;
                   <!-- border: 1px solid black; -->
                 }

                 div.mitad_ancho_e{
                   margin:auto;
                   margin-top:0px;
                   width:50%;
                   min-height:300px;
                   max-height:600px;
                   border: 1px solid black;
                 }

                 div.contenedor_b{
                   margin:auto;
                   margin-top:0px;
                   margin-bottom:2px;
                   width:100%;
                   min-height:200px;
                   max-height:600px;
                   <!-- border: 1px solid black; -->
                 }

                 div.mitad_ancho{
                   margin:auto;
                   margin-top:0px;
                   width:50%;
                   min-height:200px;
                   max-height:600px;
                   border: 1px solid black;
                 }

                 div.contenedor_c{
                   margin:auto;
                   margin-top:0px;
                   width:30%;
                   min-height:305px;
                   max-height:600px;
                   border: 1px solid black;
                 }

               </style>

               <div class="contenedor_encabezado">
                 <div class="mitad_ancho" style="float:left; border: 0px solid black">

                   <div style="width:100%; height:150px; border: 1px solid black;">
                     <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="width:100%; height:90%; overflow: hidden" alt="Logo"/>
                   </div>

                   <div style="width:100%; height:148px; border: 1px solid black;">
                     <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">BOOKING NBR:</p>
                     <br/>
                     <p style="text-align:center"><span t-if="o.booking_nbr" t-esc="o.booking_nbr"/></p>
                   </div>

                 </div>
                 <div class="mitad_ancho_e" style="float:right">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">SHIPPER</p>
                 </div>
               </div>

               <br/>

               <div class="contenedor_b" style="border: 1px solid black;">
                 <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">CONSIGNEE</p>
                 <br/>
                 <p style="text-align:center"><span t-if="o.proforma_id" t-esc="o.proforma_id.partner_id.name"/></p>
               </div>

               <br/><br/>

               <div class="contenedor_b">
                 <div class="mitad_ancho" style="float:left">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">NOTIFY</p>
                   <br/>
                   <p style="text-align:center"><span t-esc="o.notify"/></p>
                 </div>

                 <div class="mitad_ancho" style="float:right">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">ALSO NOTIFY</p>
                   <br/>
                   <p style="text-align:center"><span t-esc="o.also_notify"/></p>
                 </div>
               </div>

               <br/><br/>

               <div class="contenedor_b">
                 <div class="mitad_ancho" style="float:left; min-height:100px">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">VESSEL AND VOY</p>
                   <p style="text-align:center"> <span t-esc="o.vesse_voy"/></p>
                 </div>

                 <div class="mitad_ancho" style="float:right; min-height:100px">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">PORT OF LOADING</p>
                   <p style="text-align:center"><span t-if="o.purchase_order" t-esc="o.purchase_order.puerto_destino"/></p>
                 </div>

                 <div class="mitad_ancho" style="float:left; min-height:100px">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">PORT OF DISCHARGE</p>
                   <p><span t-if="o.proforma_id" t-esc="o.proforma_id.puerto"/></p>
                 </div>

                 <div class="mitad_ancho" style="float:left; min-height:100px">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">PLACE OF DELIVERY</p>
                   <p style="text-align:center"><span t-esc="o.place_deliver"/></p>
                 </div>
               </div>

               <br/><br/>
               <p style="page-break-after:always;"></p>
               <div class="contenedor_b" style="min-height:305px">
                 <div class="contenedor_c" style="float:left">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">MARKS</p>
                 </div>
                 <div class="contenedor_c" style="float:left; width:40%; margin-bottom:10px">
                   <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">DESCRIPTION OF CARGO</p>
                   <br/>
                   <t t-foreach="o.purchase_order.order_line" t-as="line">
                     <p style="text-align:center"><span t-esc="line.product_qty"/> <span t-esc="line.product_id.name"/></p>
                     <br/>
                   </t>
                 </div>
                 <div class="contenedor_c" style="float:left; border: 0px solid black">
                   <div style="width:100%; height:100px; border: 1px solid black;">
                     <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">GROSS</p>
                   </div>
                   <div style="width:100%; height:100px; border: 1px solid black;">
                     <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">NET</p>
                   </div>
                   <div style="width:100%; height:100px; border: 1px solid black;">
                     <p style="text-align:center; background:#E5E7E9; border: 1px solid black;">MEASUREM</p>
                   </div>
                 </div>
               </div>

               <br/><br/>

               <table style="width:100%; text-align:center" border="1">

                 <tr style="background:#E5E7E9">
                   <td>CONTAINER</td>
                   <td>SEAL 1:</td>
                   <td>TARE: </td>
                   <td>QUANT ROLLS</td>
                   <td>GROSS WEIGHT</td>
                   <td>M3</td>
                 </tr>

                 <tr height="20px">
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                 </tr>

                 <tr height="20px">
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                   <td></td>
                 </tr>

               </table>

             </div>




           </div>
         </t>

         <div class="footer">

         </div>
       </t>
    </template>
</odoo>
