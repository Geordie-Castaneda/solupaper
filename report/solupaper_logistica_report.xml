<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="solupaper_logistica_report">
       <t t-call="web.html_container">

         <t t-set="data_report_margin_top" t-value="12"/>
         <t t-set="data_report_header_spacing" t-value="4"/>

         <t t-foreach="docs" t-as="o">
           <div class="article">
               <div class="page">

                 <style>
                   <!-- estilos para el encabezado  -->
                   div.div_box_general_header{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     height:300px;
                     <!-- background:#F4D03F; -->
                   }

                   div.div_right_box{
                     margin:auto;
                     margin-top:5px;
                     width:50%;
                     height:290px;
                     float:right;
                     <!-- background:#F8C471; -->
                   }

                   div.div_left_box{
                     margin:auto;
                     margin-top:5px;
                     margin-left:0px;
                     width:50%;
                     height:290px;
                     float:left;
                   }

                   div.div_logo_box{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     height:145px;
                     <!-- border: 1px solid black; -->
                   }

                   div.div_box_header_standard{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     height:50px;
                     <!-- background:#F7F9F9; -->
                   }

                   div.divs_mitad_espacio_right{
                     border: 1px solid black;
                     margin:auto;
                     margin-top:0px;
                     width:50%;
                     height:40px;
                     float:right;
                   }
                   div.divs_mitad_espacio_left{
                     display: flex;
                     justify-content: center;
                     border: 1px solid black;
                     margin:auto;
                     margin-top:0px;
                     width:50%;
                     height:40px;
                     float:left;
                   }

                   div.div_titulo_1{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     height:75px;
                     border: 1px solid black;
                   }

                   div.div_cajita{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     height:214px;
                     border: 1px solid black;
                   }

                   div.div_cajita_1{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     min-height:40px;
                     max-height:100px;
                     border: 1px solid black;
                     background:#D7DBDD;
                   }

                   <!-- estilos para el body :C -->

                   div.div_body_general{
                     display: flex;
                     align-items: stretch;
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     min-height:1020px;
                     max-height:2000px;
                     border: 1px solid black;
                   }

                   div.div_cajita_izquierda{
                     display: flex;
                     align-items: stretch;
                     margin:auto;
                     margin-top:0px;
                     width:50%;
                     min-height:110px;
                     max-height:200px;
                     border: 1px solid black;
                     <!-- float:left; -->
                   }

                   div.div_espacio_total{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     min-height:100px;
                     max-height:150px;
                     border: 1px solid black;
                   }

                   div.div_espacio_total_0{
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     min-height:50px;
                     max-height:500px;
                     border: 1px solid black;
                   }

                   div.caja_horizontal{
                     display: flex;
                     align-items: stretch;
                     margin:auto;
                     margin-top:0px;
                     width:100%;
                     min-height:110px;
                     max-height:400px;
                     border: 1px solid black;
                   }


                 </style>

                 <div class="div_box_general_header">

                   <div class="div_left_box">

                     <div class="div_logo_box">
                       <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="width:100%; height:90%; overflow: hidden" alt="Logo"/>
                     </div>
                     <br/>
                     <div class="div_box_header_standard">
                       <div class="divs_mitad_espacio_left" style="background:#D7DBDD">
                         <br/>
                         <p style="text-align:center">Date:</p>
                       </div>

                       <div class="divs_mitad_espacio_right">
                         <br/>
                         <p style="text-align:center"><span t-if="o.fecha_logistica" t-field="o.fecha_logistica"/><br/></p>
                       </div>
                     </div>
                     <br/>
                     <div class="div_box_header_standard" >
                       <div class="divs_mitad_espacio_left" style="background:#D7DBDD">
                         <br/>
                         <p style="text-align:center">Our Purchase Order:</p>
                       </div>
                       <div class="divs_mitad_espacio_right" style="background:#F1C40F">
                         <br/>
                         <p style="text-align:center">
                           <span t-if="o.proforma_id" t-esc="o.proforma_id.po_customer"/>
                         </p>
                       </div>
                     </div>

                   </div>


                   <div class="div_right_box">

                     <div class="div_titulo_1"></div>
                     <div class="div_cajita">
                       <div class="div_cajita_1">
                         <p style="text-align:center">SHIPPER</p>
                       </div>
                       <p style="text-align:center">

                         <span t-if="o.company_id.name" t-esc="o.company_id.name"/><br/>
                         <span t-if="o.company_id.street" t-esc="o.company_id.street"/><br/>
                         <span t-if="o.company_id.city" t-esc="o.company_id.city"/> <span t-if="o.company_id.state_id" t-esc="o.company_id.state_id.name"/><br/>
                         <span t-if="o.company_id.country_id" t-esc="o.company_id.country_id.name"/><br/>
                         TEL: <span t-if="o.company_id.phone" t-esc="o.company_id.phone"/><br/>
                         FEI: <span t-if="o.company_id.vat" t-esc="o.company_id.vat"/><br/>
                         <!-- <span t-if="o.company_id.name" t-esc="o.company_id.street"/><br/> -->
                       </p>
                     </div>

                   </div>
                 </div>


                 <div class="div_body_general">


                   <div class="caja_horizontal">

                     <div class="div_cajita_izquierda" style="float:left">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Quantity of containers</p>
                       </div>
                       <br/>
                       <p style="text-align:center">
                         <span t-if="o.quantity_containers" t-esc="o.quantity_containers"/>
                       </p>
                     </div>

                     <div class="div_cajita_izquierda" style="float:right">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Type of Container:</p>
                       </div>
                       <table style="width:100%; min-height:56px; max-height:auto" border="1">
                         <tr style="text-align:center">
                           <td>
                             20'
                           </td>
                           <td>
                             40'DC
                           </td>
                           <td>
                             40'HC
                           </td>
                           <td>
                             40 NOR
                           </td>
                         </tr>

                         <tr style="text-align:center">
                           <td>
                             <t t-if="o.type_container == 'a'">
                               X
                             </t>
                           </td>

                           <td>
                             <t t-if="o.type_container == 'b'">
                               X
                             </t>
                           </td>

                           <td>
                             <t t-if="o.type_container == 'c'">
                               X
                             </t>
                           </td>

                           <td>
                             <t t-if="o.type_container == 'd'">
                               X
                             </t>
                           </td>
                         </tr>

                       </table>
                     </div>

                   </div>

                   <div class="caja_horizontal">
                     <div class="div_cajita_izquierda" style="float:left">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Incoterm</p>
                       </div>
                       <p><span t-if="o.incoterm_id" t-esc="o.incoterm_id.name"/></p>
                     </div>

                     <div class="div_cajita_izquierda" style="float:right; background:#F1C40F">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Free days at destination:</p>
                       </div>
                       <br/>
                       <t t-if="o.days_free == 'a'">
                         <p style="text-align:center"><b>7 Days Free</b></p>
                       </t>
                       <t t-if="o.days_free == 'b'">
                         <p style="text-align:center"><b>14 Days Free</b></p>
                       </t>
                       <t t-if="o.days_free == 'c'">
                         <p style="text-align:center"><b>21 Days Free</b></p>
                       </t>
                     </div>

                   </div>

                   <div class="caja_horizontal">
                     <div class="div_cajita_izquierda" style="float:left">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Port of Loading:</p>
                       </div>
                       <br/>
                       <p style="text-align:center">
                         <span t-if="o.purchase_order" t-esc="o.purchase_order.puerto_destino"/>
                       </p>
                     </div>

                     <div class="div_cajita_izquierda" style="float:right">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Port of Discharge:</p>
                       </div>
                       <br/>
                       <p style="text-align:center">
                         <span t-if="o.proforma_id.puerto" t-esc="o.proforma_id.puerto"/>
                       </p>
                     </div>
                   </div>

                   <div class="caja_horizontal">
                     <div class="div_espacio_total">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Place of  Delivery in Case of  DAP:</p>
                       </div>
                       <p style="text-align: justify;">
                         <span t-if="o.place_deliver" t-esc="o.place_deliver"/>
                       </p>
                     </div>
                   </div>

                   <div class="caja_horizontal" style="min-height:156px; max-height:250px">

                     <div class="div_cajita_izquierda" style="float:left; height:156px">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Supplier :</p>
                       </div>
                       <br/>
                       <p style="text-align:center">
                         <t t-if="o.purchase_order">
                          <t t-if="o.purchase_order.partner_id">
                            <t t-if="o.purchase_order.partner_id.parent_id">
                              <span t-if="o.purchase_order.partner_id.parent_id.name" t-esc="o.purchase_order.partner_id.parent_id.name"/><br/>
                              <span t-if="o.purchase_order.partner_id.parent_id.street" t-esc="o.purchase_order.partner_id.parent_id.street"/>
                              <span t-if="o.purchase_order.partner_id.parent_id.city" t-esc="o.purchase_order.partner_id.parent_id.city"/><br/>
                              <span t-if="o.purchase_order.partner_id.parent_id.state_id" t-esc="o.purchase_order.partner_id.parent_id.country_id.name"/><br/>
                              <span t-if="o.purchase_order.partner_id.parent_id.phone" t-esc="o.purchase_order.partner_id.parent_id.phone"/><br/>
                            </t>
                          </t>
                         </t>
                       </p>

                     </div>

                     <div class="div_cajita_izquierda" style="float:right;">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Supplier Contact:</p>
                       </div>
                       <p style="text-align:center">
                         <t t-if="o.purchase_order">
                          <span t-if="o.purchase_order.partner_id.name" t-esc="o.purchase_order.partner_id.name"/><br/>
                          <span t-if="o.purchase_order.partner_id.street" t-esc="o.purchase_order.partner_id.street"/>
                           <span t-if="o.purchase_order.partner_id.city" t-esc="o.purchase_order.partner_id.city"/><br/>
                          <span t-if="o.purchase_order.partner_id.state_id" t-esc="o.purchase_order.partner_id.country_id.name"/><br/>
                          <span t-if="o.purchase_order.partner_id.phone" t-esc="o.purchase_order.partner_id.phone"/><br/>
                         </t>
                       </p>
                     </div>

                   </div>

                   <div class="caja_horizontal">
                     <div class="div_espacio_total_0">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Description of cargo and terms</p>
                       </div>
                       <table style="width:100%;border-bottom: 1px solid white;border: 0px solid white;">
                         <t t-if="o.purchase_order">
                           <t t-if="o.purchase_order.order_line">
                             <t t-foreach="o.purchase_order.order_line" t-as="line">
                               <tr>
                                 <td style="text-align:right">
                                   <span t-esc="line.product_qty"/>
                                 </td>
                                 <td style="text-align:center">
                                   <span t-esc="line.product_id.name"/>
                                 </td>
                               </tr>
                             </t>
                           </t>
                         </t>
                       </table>
                     </div>
                   </div>


                   <div class="div_cajita_1" >
                     <p>
                       NOTE: Please send hard copy of booking as soon as you have it.
                       Please note we need Pictures of every load before and after loading.
                     </p>
                   </div>

                   <div class="caja_horizontal">
                     <div class="div_cajita_izquierda" style="width:30%;background:#D7DBDD;float:left">
                       <br/><br/>
                       <p style="text-align:center">Client Information:</p>
                     </div>
                     <div class="div_cajita_izquierda" style="width:70%;float:right">
                       <p style="text-align:center">
                         <span t-if="o.proforma_id.partner_id.name" t-esc="o.proforma_id.partner_id.name"/><br/>
                         <span t-if="o.proforma_id.partner_id.street" t-esc="o.proforma_id.partner_id.street"/>
                         <span t-if="o.proforma_id.partner_id.city" t-esc="o.proforma_id.partner_id.city"/><br/>
                         <span t-if="o.proforma_id.partner_id.state_id" t-esc="o.proforma_id.partner_id.country_id.name"/><br/>
                         <span t-if="o.proforma_id.partner_id.phone" t-esc="o.proforma_id.partner_id.phone"/><br/>
                       </p>
                     </div>

                   </div>

                   <div class="caja_horizontal">
                     <div class="div_espacio_total_0">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Freigth Forward Information</p>
                       </div>
                       <table style="width:100%; height:60px">
                         <tr style="text-align:center; background:#D7DBDD">
                           <td>
                             Company:
                           </td>
                           <td>
                             Contact Person:
                           </td>
                           <td>
                             Email:
                           </td>
                         </tr>

                         <tr style="text-align:center">
                           <td>
                             <span t-if="o.freight_supplier_id" t-esc="o.freight_supplier_id.name"/>
                           </td>
                           <td>
                             <span t-if="o.freight_supplier_id" t-esc="o.freight_supplier_id.phone"/>
                           </td>
                           <td>
                             <span t-if="o.freight_supplier_id" t-esc="o.freight_supplier_id.email"/>
                           </td>
                         </tr>
                       </table>
                     </div>




                   </div>

                   <div class="caja_horizontal" style="min-height:200px;max-height:250px">

                     <div class="div_cajita_izquierda" style="float:left;min-height:200px;max-height:250px">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Price Quoted:</p>
                       </div>
                       <br/>
                       <p style="text-align:center">
                         <span t-if="o.price_quoted" t-esc="o.price_quoted"/>
                       </p>

                     </div>

                     <div class="div_cajita_izquierda" style="float:right">
                       <div class="div_cajita_1">
                         <p style="text-align:center">Movement Type:</p>
                       </div>
                       <br/>
                       <p style="text-align:center">
                         <span t-if="o.movement_type" t-esc="o.movement_type"/>
                       </p>
                     </div>

                   </div>

                 </div>


               </div>
           </div>
         </t>

       </t>
    </template>
</odoo>
